---
import Layout from '../layouts/Layout.astro';
import Home from '../components/Home.astro';
import Benefits from '../components/Benefits.astro';
import Price from '../components/Price.astro';
import Testimonials from '../components/Testimonials.astro';
import Footer from '../components/Footer.astro';
---

<!-- Contenido solo visible en pantallas grandes (lg y mayores) -->
<div class="hidden lg:block">
  <Layout>
    <Home />
    <Benefits />
    <Price />
    <Testimonials />
    <Footer />
  </Layout>
</div>

<!-- Mensaje solo visible en pantallas chicas -->
<div class="lg:hidden min-h-screen flex items-center justify-center text-center px-6 bg-black text-white">
  <div>
    <h2 class="text-2xl font-semibold mb-4">⚠️ Sitio no disponible</h2>
    <p>Por el momento, esta página solo está disponible en computadoras.</p>
  </div>
</div>
